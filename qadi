#!/usr/bin/env python3
"""
Default QADI command - uses the simplified version with clear Phase 1.

This is a convenience wrapper for qadi_simple.py that supports all options including evolution.

Usage:
    ./qadi "Your question"                    # Basic QADI analysis
    ./qadi "Your question" --evolve          # QADI + genetic evolution
    ./qadi "Your question" -e -g 5 -p 20     # Custom evolution parameters
"""

import sys
import subprocess
from pathlib import Path

# Get the directory of this script
script_dir = Path(__file__).parent

# Run qadi_simple.py with all arguments passed through
subprocess.run([sys.executable, str(script_dir / "qadi_simple.py")] + sys.argv[1:])